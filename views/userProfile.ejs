<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Include Tailwind CSS -->
    <link rel="stylesheet" href="https://cdn.tailwindcss.com">
    <link rel="stylesheet" href="/styles/style.css"> <!-- Update the path to your CSS file -->
    <link rel="icon" href="/photos/lights_out_icon.jpeg" type="image/jpeg">

    <title>User Profile</title>
</head>
<body class="bg-gray-100 font-poppins min-h-screen flex flex-col items-center">
    <header class="w-full bg-pink-500 py-4 text-white text-2xl font-bold uppercase border-b-2 border-pink-600">
        Lights Out
    </header>
    <a href="/" class="absolute top-4 right-4 bg-pink-500 text-white px-4 py-2 rounded uppercase text-lg font-bold hover:underline">Home</a>
    <div class="profile-container bg-white p-8 rounded-lg shadow-md text-center w-full max-w-screen-md mt-8">
        <h2 class="text-3xl font-bold mb-4">Welcome <span id="username" class="text-pink-500"><%= name %></span>!</h2>
        
        <!-- Overall Accuracy Section -->
        <div class="bg-gray-200 rounded-lg p-6 mb-8">
            <h3 class="text-xl font-bold mb-4">Overall Accuracy</h3>
            <div class="text-4xl font-bold text-pink-500">
                <% if (overallAccuracy >= 80) { %>
                    <i class="fas fa-thumbs-up text-green-500"></i>
                <% } else { %>
                    <i class="fas fa-thumbs-down text-red-500"></i>
                <% } %>
                <%= overallAccuracy %>%
            </div>
        </div>
        
        <!-- Table for 2-state Accuracy -->
        <div class="mb-8">
            <h3 class="text-xl font-bold mb-2">Accuracy for 2-State</h3>
            <table class="w-full border-collapse border border-gray-300">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="px-4 py-2 text-center">Level</th>
                        <th class="px-4 py-2 text-center">Accuracy Percentage</th>
                    </tr>
                </thead>
                <tbody>
                    <% progress2State.sort((a, b) => a.level - b.level).forEach(item => { %>
                        <tr>
                            <td class="px-4 py-2 align-middle text-center"><%= item.level %></td>
                            <td class="px-4 py-2 flex items-center justify-center">
                                <% if (item.targetmoves !== 0) { %>
                                    <%= ((item.targetmoves / item.moves) * 100).toFixed(2) %>%
                                <% } else { %>
                                    0%
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        
        <!-- Table for 3-state Accuracy -->
        <div class="mb-8">
            <h3 class="text-xl font-bold mb-2">Accuracy for 3-State</h3>
            <table class="w-full border-collapse border border-gray-300">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="px-4 py-2 text-center">Level</th>
                        <th class="px-4 py-2 text-center">Accuracy Percentage</th>
                    </tr>
                </thead>
                <tbody>
                    <% progress3State.sort((a, b) => a.level - b.level).forEach(item => { %>
                        <tr>
                            <td class="px-4 py-2 align-middle text-center"><%= item.level %></td>
                            <td class="px-4 py-2 flex items-center justify-center">
                                <% if (item.targetmoves !== 0) { %>
                                    <%= ((item.targetmoves / item.moves) * 100).toFixed(2) %>%
                                <% } else { %>
                                    0%
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        
        
        <a href="/edit-profile" class="bg-green-500 text-white px-6 py-3 rounded-full uppercase font-bold text-lg hover:bg-green-600 transition duration-300">Edit Profile</a>
    </div>
</body>
</html>
